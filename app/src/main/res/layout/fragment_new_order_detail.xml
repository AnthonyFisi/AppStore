<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.OrderUI.NewOrder.Detail.NewOrderDetailFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/fragment_eliminar_UPDATE_PEDIDO"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:layout_marginTop="10dp"
                android:background="#16181C38" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/fragment_new_order_detail_DISMINUIR_TIEMPO"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/menos" />

                <TextView
                    android:id="@+id/fragment_increment_TIEMPO"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:gravity="center"
                    android:text="5"
                    android:textSize="50dp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/fragment_new_order_detail_INCREMENTAR_TIEMPO"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/mas" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:gravity="center"
                    android:text="min"
                    android:textSize="20dp"
                    android:textStyle="bold" />



            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2_eliminar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Orden"
                    android:textStyle="bold"
                    android:textSize="25dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10dp">
                    <TextView
                        android:id="@+id/fragment_new_order_detail_HORA_LLEGADA"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="10dp"
                        android:gravity="end"
                        android:text="8:00pm"
                        android:textSize="20dp" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fragment_new_order_detail_NUMERO_ORDEN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#578462"
                    android:textSize="20dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:background="@drawable/fragment_new_order_border"
                    android:padding="5dp"
                    android:gravity="center"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/fragment_new_order_detail_TIPO_ENVIO"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="#3BBF82"
                        android:text="Delivery"
                        android:textSize="20dp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:background="@drawable/fragment_new_order_border"
                    android:padding="5dp"
                    android:layout_marginStart="50dp"
                    android:gravity="center"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:gravity="center"
                        android:id="@+id/fragment_new_order_detail_ESTADO_PAGO"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#3BBF82"
                        android:text="Cancelado"
                        android:textSize="20dp" />


                </LinearLayout>



            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.6dp"
                android:layout_marginTop="10dp"
                android:background="#16181C38" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cliente"
                        android:textSize="15dp" />
                    <TextView
                        android:id="@+id/fragment_new_order_detail_NOMBRE_CLIENTE"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Juan Guitierrea"
                        android:textSize="20dp" />


                </LinearLayout>
                <LinearLayout
                    android:layout_marginStart="50dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_gravity="bottom"
                        android:background="@drawable/ic_phone"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                    <TextView
                        android:layout_marginStart="10dp"
                        android:layout_gravity="bottom"
                        android:id="@+id/fragment_new_order_detail_NUMERO_TELEFONO"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="987456123"
                        android:textSize="20dp" />


                </LinearLayout>



            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.6dp"
                android:layout_marginTop="10dp"
                android:background="#16181C38" />

        </LinearLayout>

        <Button
            android:id="@+id/fragment_eliminar_UPDATE_PEDIDO"
            style="@style/ButtonOrder"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/fragment_button_estados"
            android:padding="10dp"
            android:text="Aceptar Pedido"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.51"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Detalles de orden"
                    android:textSize="20dp" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/fragment_new_order_detail_RECYCLER_VIEW_PRODUCTOS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="end">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="40dp"
                        android:text="Total "
                        android:textSize="25dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"

                        android:text="S/."
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/fragment_new_order_detail_COSOTO_TOTAL"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="30dp"
                        android:textStyle="bold"
                        android:text=" 0200.0 "
                        android:textSize="25dp" />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2_eliminar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:text="Comentarios"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/fragment_new_order_detail_COMENTARIO_GLOBAL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="40dp"
                    android:textSize="15dp" />

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.6dp"
                android:layout_marginTop="10dp"
                android:background="#16181C38" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>